---
import Button from '@components/utilities/button/Button.astro';
import Image from '@components/utilities/image/Image.astro';
const { title, subtitle } = Astro.props;
---

<div class="swiper-slide hero-slide h-100 swiper-slide-active">
    <div class="position-relative hero-slider">
        <div class="image-backdrop">
            <Image class="hero-image" />
        </div>
        <div
            class="position-absolute w-100 z-1 top-50 start-50 translate-middle"
        >
            <div class="container">
                <div class="row">
                    <div class="col-12 px-10 text-bootstrap-black">
                        <h2 class="fs-32">{title}</h2>
                        <p>{subtitle}</p>
                        <Button title="Read More" color="primary" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

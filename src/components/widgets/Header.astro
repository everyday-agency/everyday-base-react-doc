---
import { Image } from "astro:assets";
import image from "../../assets/placeholder-image.webp";
---

<style lang="scss">
	.docs {
		@import "bootstrap/scss/bootstrap";
		box-shadow: 0 1rem 3rem rgba(0, 0, 0, 0.15);
		// @media (prefers-color-scheme: dark) {
		// 	box-shadow: 0 1rem 3rem rgba(0, 0, 0, 0.15);
		// }

		.header-image__container {
			position: relative;

			&::after {
				content: "";
				position: absolute;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				background: linear-gradient(
					to bottom,
					rgba(0, 0, 0, 0.5) 0%,
					rgba(0, 0, 0, 0.5) 100%
				);
				z-index: 0;
			}

			.text-white {
				color: white !important;
			}
		}
	}
</style>

<div class="docs">
	<div class="header">
		<div class="position-relative">
			<div class="header-image__container">
				<Image
					src={image}
					alt="Placeholder Image"
					class={"w-100 object-fit-cover"}
				/>
			</div>

			<div class="position-absolute bottom-0 w-100 z-2">
				<div class="container">
					<div class="row">
						<div class="col-12">
							<h1 class="fs-40 text-center text-white">
								This is our Headline
							</h1>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
